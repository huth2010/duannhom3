<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp"
    android:id="@+id/bottom_sheet_kho"
    tools:context=".Activity.ChiTietHoaDonNhapActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="670dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order details"
            android:layout_centerVertical="true"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#39000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Các sản phẩm đã chọn"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerview_lsProduct_ChiTietHoaDonNhap"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#39000000" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_add_NCC"
                android:drawableRight="@drawable/ic_baseline_person_add_alt_24"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_weight="2"
                android:layout_width="140dp"
                android:layout_height="0dp"
                android:text="Nhà cung cấp"
                android:layout_marginBottom="10dp"
                />
            <Spinner
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:id="@+id/spn_NCC"
                android:layout_height="0dp"
                android:background="@drawable/border_btn_nuumber"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="#39000000" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Ngày nhập"
                android:textSize="16sp"
                />
            <TextView
                android:layout_weight="1.3"
                android:id="@+id/tv_ngay_ChiTietHoaDonNhap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2022/11/28"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tổng số lượng"
                android:textSize="16sp"
                />
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_chitietSoLuong_ChiTietHoaDonNhap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tổng tiền hàng"
                android:textSize="16sp"
                />
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_tongtienNH_ChiTietHoaDonNhap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Chiết khấu"
                android:textSize="16sp"
                />
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_chietKhau_ChiTietHoaDonNhap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tổng cộng"
                android:textSize="16sp"
                />
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_tongchiNH_ChiTietHoaDonNhap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#39000000" />
        <Button
            android:id="@+id/btn_datHang"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/ic_baseline_shopping_cart_24"
            android:layout_gravity="bottom"
            android:textStyle="bold"
            android:text="Đặt Hàng"
            />
    </LinearLayout>

</LinearLayout>