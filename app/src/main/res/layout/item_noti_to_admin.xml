<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:padding="15dp">
<androidx.cardview.widget.CardView
    android:layout_width="80dp"
    android:layout_height="80dp"
    app:cardCornerRadius="40dp"
    android:id="@+id/c"
    android:layout_centerVertical="true"
    >
    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/anh"
        android:scaleType="centerCrop"
        android:layout_height="match_parent"
        android:background="@drawable/analytics"
        />
</androidx.cardview.widget.CardView>
    <TextView
        android:layout_toRightOf="@id/c"
        android:id="@+id/message"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:text="Nhân viên Nguyễn Duy Khang yêu cầu xác nhận công"
        android:textSize="18sp"
        android:layout_toLeftOf="@id/xacNhan"
        android:textStyle="bold" />
    <TextView
        android:layout_toRightOf="@id/c"
        android:id="@+id/ngay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/message"
        android:textColor="@color/black"
        android:text="2003-29-9"
        android:textSize="18sp"
        android:layout_toLeftOf="@id/xacNhan"
        android:textStyle="italic" />
    <ImageView
        android:id="@+id/xacNhan"
        android:layout_width="wrap_content"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_right"
        android:layout_alignParentEnd="true"
        />

</RelativeLayout>